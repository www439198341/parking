/* pages/payment/payment.wxss */

.container{
    width: 100%;
    display: flex;
    
}

.parkInfo{
    display: flex;
    align-items: center;
    flex-direction: column;
    border: 4rpx solid plum;
    border-radius: 50%;
    width:550rpx;
    height:550rpx;
    margin-top: 200rpx;
    font-size: 40rpx;
}

.info{
    width:50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    
    margin:20rpx;
    padding: 8rpx;
    border-radius: 5%;
    
}

.carNumber{
    margin-top: 70rpx;
    background-color: #abc;
}

.parkTime{
    color: plum;
    font-size: 36rpx;
}

.parkLocation{
background-color: #abc;
font-family: "中华新魏";
}

.fee{
background-color: #abc;
color: red;
}

.pay{
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: green;
    font-size: 40rpx;
    padding: 20rpx 30rpx;
    border-radius: 5%;
    margin-bottom: 100rpx;
}

.noinfoup{
    margin-top: 300rpx;
    font-size: 50rpx;
}

.noinfodown{
    margin-bottom: 300rpx;
}
