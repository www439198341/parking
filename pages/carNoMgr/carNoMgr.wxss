/* pages/carNoMgr/carNoMgr.wxss */
.item-page{
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items:center;
    font-size: 38rpx;
    font-family: 微软雅黑;
}

.address-item{
    width: 100%;
    position: relative;
	height: 150rpx;
	line-height: 150rpx;
	overflow: hidden;
    border-bottom: 1px solid gainsboro;
}

.address-item-top{
    height: 150rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    background-color: white;
    transition: left 0.2s ease-in-out;
    white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
    z-index: 5;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
}

.item-page-left{
    width: 15%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items:center;
}

.item-page-middle{
    width:  70%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.item-page-left-img{
    width: 60rpx;
    height: 60rpx;
}

.item-page-right{
    width: 15%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items:center;
}

.item-page-right image{
    width: 70rpx;
    height: 70rpx;
}
.bottom{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    position: fixed;
    bottom: 90rpx;
    height: 90rpx;
    width:100%;
    margin-bottom:5rpx; 
}
.bottom-left{
    display: flex;
    flex-direction: column;
    background-color: #eee;
    margin:0 50rpx;
    color: #d2d2d3;
}



.bottom-right{
    border: 1px #d2d2d3 solid;
    border-radius: 10rpx;
    background-color: #fff;
}

.add-address{
    background: #4a86e8;
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 90rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.add-address text{
    color: #fff;
    letter-spacing: 3px;
}

.inner {
	position: absolute;
	top: 0;
}

.posit {
	display: flex;
	flex-direction: row;
	width: 150px;
	height: 100%;
	right: 0;
    position: absolute;
}

.del {
	background-color: #e64340;
	width: 60px;
	height: 150rpx;
    line-height: 150rpx;
	text-align: center;
	z-index: 4;
	color: #fff;
	position: absolute;
	right: 0;
}

.editor {
	background-color: #cccccc;
	width: 90px;
	height: 150rpx;
    line-height: 150rpx;
	text-align: center;
	z-index: 4;
	color: #fff;
	position: absolute;
	left: 0;
}

.rr{
    width: 100%;
    word-wrap:break-word;
    word-break:break-all;
    position: relative;
    padding-left: 150rpx;
}


/*提示输入框*/
.wxapp-prompt{
    width: 80%;
    height: 140px;
    margin: auto;
    background-color: #e7e7eb;
    border: 1px #d2d2d3 solid;
    border-radius: 5px;
    position: fixed;
    top: 30%;
}
.wxapp-prompt .prompt-tip{
    height: 40px;
    line-height: 40px;
    padding-left: 10px;
    font-size: 14PX;
}
.wxapp-prompt .prompt-input{
    height: 40px;
    line-height: 40px;
    padding: 10px 10px 0px 10px;
    background-color: #ffffff;
}
.wxapp-prompt .prompt-input input{
    border: 1px #eee solid;
    border-radius: 3px;
    padding-left: 5px;
    font-size: 14px;
}
.wxapp-prompt .prompt-input input:hover{
    border: 1px #4d90fe solid;
}
.wxapp-prompt .prompt-btns{
    height: 60px;
    line-height: 60px;
    padding-right: 10px;
    text-align: right;
}


