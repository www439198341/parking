/* pages/me/me.wxss */
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.nameAndNumber{
  display:flex;
  flex-direction: column;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 100px;
}

.userAction{
  margin-top: 50px;
}

.me-list{
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #abc;
  margin:20px;
  padding: 8px;
  border-radius: 5%;
  border:2px solid #aaa;

}