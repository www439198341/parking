<!--pages/me/me.wxml-->
<view class="container">
  <view  bindtap="bindViewTap" class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>

    <view class="nameAndNumber">
      <text class="userinfo-nickname">{{carNumber}}</text>
    </view>
  </view>

  <!-- 显示屏幕下方文字 -->
  <view class="userAction">
    <view class="me-list" bindtap="carNoMgr">{{motto1}}</view>
    <view class="me-list" bindtap="logs">{{motto2}}</view>
    <view class="me-list" bindtap="onsale">{{motto3}}</view>
    <view class="me-list" bindtap="help">{{motto4}}</view>
  </view>
</view>

