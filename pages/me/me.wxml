<!--pages/me/me.wxml-->
<view class="container">
  <view  bindtap="bindViewTap" class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>

    <view class="nameAndNumber">
      
      <text class="userinfo-nickname">用户名:{{userInfo.nickName}}</text>
      <text class="userinfo-nickname">车牌号:{{carNumber}}</text>
    </view>
  </view>

  <!-- 显示屏幕下方文字 -->
  <view class="userAction">
    <view class="me-list">{{motto1}}</view>
    <view class="me-list">{{motto2}}</view>
    <view class="me-list">{{motto3}}</view>
    <view class="me-list">{{motto4}}</view>
  </view>
</view>

